from CONSTANTS import *

class Brick(pygame.sprite.Sprite):
    def __init__(self, color, gs=None):
        # initialize
        pygame.sprite.Sprite.__init__(self)
        self.gs = gs
        self.image = pygame.Surface([BRICK_WIDTH, BRICK_HEIGHT])
        self.image.fill(BRICK_COLOR


class Mouth(pygame.sprite.Sprite):
    def __init__(self, gs=None):
        # sprite constants
        self.IMAGE_FN = 'mouth.png'
        self.INITIAL_BUFFER = min(gs.WIDTH, gs.HEIGHT) / 20
        self.MOVE_UNIT = 5 # pixels

        # initialize
        pygame.sprite.Sprite.__init__(self)
        self.gs = gs
        self.image = pygame.image.load(self.IMAGE_FN)
        self.orig_image = self.image
        self.rect = self.image.get_rect()
        self.rect.topleft = (self.INITIAL_BUFFER, self.INITIAL_BUFFER)

        # sprite properties
        self.angle = 0
        self.is_firing = False
